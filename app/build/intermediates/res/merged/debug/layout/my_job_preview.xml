        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".55"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.chalkboard.customviews.MyTextViewMarlBold
                    android:id="@+id/job_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/paddingsmall"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingTop="@dimen/padding"
                    android:text="naskmd"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/dark_grey" />

                <View
                    android:id="@+id/view_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/job_name"
                    android:background="@color/grey" />


                <com.chalkboard.customviews.MyTextViewMark
                    android:id="@+id/job_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_horizontal"
                    android:paddingBottom="@dimen/paddingsmall"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingTop="@dimen/padding"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/dark_grey" />

                <LinearLayout
                    android:id="@+id/info_ll"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/job_description"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.chalkboard.customviews.MyTextViewMarlBold
                            android:id="@+id/salary_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/salary"
                            android:paddingBottom="@dimen/paddingsmall"
                            android:paddingLeft="@dimen/padding"
                            android:paddingRight="@dimen/padding"
                            android:paddingTop="@dimen/padding"
                            android:text="SALARY"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <com.chalkboard.customviews.MyTextViewMark
                            android:id="@+id/salary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:paddingLeft="@dimen/padding"
                            android:singleLine="true"
                            android:text=""
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/dark_grey" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.chalkboard.customviews.MyTextViewMarlBold
                            android:id="@+id/date_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/start_date"
                            android:paddingBottom="@dimen/paddingsmall"
                            android:paddingLeft="@dimen/padding"
                            android:paddingRight="@dimen/padding"
                            android:paddingTop="@dimen/padding"
                            android:text="START DATE"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <com.chalkboard.customviews.MyTextViewMark
                            android:id="@+id/start_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:paddingLeft="@dimen/padding"
                            android:singleLine="true"
                            android:text="dfgdfg"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/dark_grey" />
                    </RelativeLayout>
                </LinearLayout>

                <com.chalkboard.customviews.MyTextViewMarlBold
                    android:id="@+id/about_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/info_ll"
                    android:paddingBottom="@dimen/paddingsmall"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingTop="@dimen/textsize"
                    android:text="ABOUT COMPANY"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <com.chalkboard.customviews.MyTextViewMark
                    android:id="@+id/about_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/about_heading"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/dark_grey" />


            </RelativeLayout>
        </ScrollView>
    </LinearLayout>


    <com.chalkboard.customviews.MyTextViewMarlBold
        android:id="@+id/remove_publish_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="#00c7d4"
        android:gravity="center"
        android:padding="@dimen/padding"
        android:singleLine="true"
        android:text="Remove Job"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

    <include layout="@layout/bar_progress" />

</RelativeLayout>