<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/margin"
    android:paddingLeft="@dimen/textsizebig"
    android:paddingRight="@dimen/textsizebig"
    android:paddingTop="@dimen/margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/remove_publish_job"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight=".45">

            <ImageView
                android:id="@+id/job_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shadow" />

            <ImageView
                android:id="@+id/img_location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:src="@drawable/place_icon" />

            <ImageView
                android:id="@+id/img_edit_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:src="@drawable/edit_top" />

            <ImageView
                android:id="@+id/job_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_above="@+id/bottom_button_layout"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_above="@+id/bottom_button_layout"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin"
                android:contentDescription="@string/app_name"
                android:src="@drawable/white_circle" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_above="@+id/bottom_button_layout"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin"
                android:contentDescription="@string/app_name"
                android:src="@drawable/circle_border" />

            <com.chalkboard.customviews.MyTextViewMark
                android:id="@+id/job_offer_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/job_location"
                android:layout_toLeftOf="@+id/job_icon"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:singleLine="true"
                android:text="Offer by"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />

            <com.chalkboard.customviews.MyTextViewMark
                android:id="@+id/job_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/job_icon"
                android:paddingBottom="@dimen/paddingsmall"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:singleLine="true"
                android:text="Location"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />

