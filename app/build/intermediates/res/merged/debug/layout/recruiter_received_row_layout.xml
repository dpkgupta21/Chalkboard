<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    card_view:cardCornerRadius="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/back_circle" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/teacher_circle_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:padding="3dp"
            app:civ_border_color="@color/grey"
            app:civ_border_width="1dp" />


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/teacher_circle_img"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp">

            <com.chalkboard.customviews.MyTextViewMarlBold
                android:id="@+id/txt_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="Md. Alnasir"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <com.chalkboard.customviews.MyTextViewMark
                android:id="@+id/txt_teacher_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_teacher_name"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="Lorem"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.chalkboard.customviews.MyTextViewMark
                android:id="@+id/txt_job_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_teacher_location"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="dkjd"
                android:textAppearance="?android:attr/textAppearanceMedium" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/img_more_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/relative"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/relative"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_10dp"
            android:src="@drawable/more_icon" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@android:color/darker_gray" />
</android.support.v7.widget.CardView>