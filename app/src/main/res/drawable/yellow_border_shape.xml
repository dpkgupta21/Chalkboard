<?xml version="1.0" encoding="utf-8"?>
<shape
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:shape="rectangle">
  
  <!-- Specify a semi-transparent solid green background color -->
  <solid android:color="@android:color/transparent" />
  
  <stroke 
    android:width="1dp"
    android:color="#ffd900" />
  
  <corners android:radius="@dimen/padding"/>
  
  <padding
    android:left="@dimen/padding"
    android:right="@dimen/padding"
    android:top="@dimen/paddingsmall"
    android:bottom="@dimen/paddingsmall" />
</shape> 