<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/textsizebig"
        android:weightSum="1" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.01" >
        </View>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginTop="@dimen/textsizebig"
            android:layout_weight="0.2"
            android:src="@drawable/logo_icon_small" />

        <View
            android:id="@+id/dotedline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="@dimen/textsizebig"
            android:background="#55ffffff" />

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_signIn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/button_yelloborder"
                android:text="       Sign In       "
                android:textColor="@android:color/white"
                
            android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_small"
                android:background="@android:color/transparent"
            
                android:text="  Sign Up  "
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"  />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_margin="@dimen/margin"
            android:layout_weight="0.09"
            android:background="@drawable/white_border_shape"
            android:gravity="center" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@drawable/email_drawable" />

            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Email Id"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/white"
                android:textCursorDrawable="@null"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="0px"
           android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_weight="0.09"
            android:background="@drawable/white_border_shape"
            android:gravity="center" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="@dimen/paddingmini"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@drawable/password_drawable" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@null"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_below="@+id/ll2"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_weight="0.09"
            android:background="@drawable/sky_color_shape_round"
            android:padding="@dimen/paddingsmall"
            android:text="Sign In"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"  />

        <TextView
            android:id="@+id/txt_forgotpass"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.05"
            android:gravity="center"
            android:text="Forgot Password? Recover Here"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceSmall"  />

        <ImageView
            android:id="@+id/dotedline11"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/dotted"
            android:layerType="software" />

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.05"
            android:layout_marginBottom="@dimen/margin"
            android:gravity="center"
            android:text="or you can Login with one of the following"
            android:textColor="@android:color/white"
           android:textAppearance="?android:attr/textAppearanceSmall"/>

        <LinearLayout
            android:id="@+id/lay2"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.12"
            android:gravity="center"
           android:paddingLeft="@dimen/marginelarge"
            android:paddingRight="@dimen/marginelarge"
                 android:layout_marginLeft="@dimen/marginelarge"
            android:layout_marginRight="@dimen/marginelarge"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btn_fb"
                android:layout_width="match_parent"
android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/facebook"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize" />

            <ImageView
                android:id="@+id/btn_twitter"
                 android:layout_width="match_parent"
android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/twitter"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize" />

            <ImageView
                android:id="@+id/btn_gplus"
                android:layout_width="match_parent"
android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/googleplus"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_nexttxt"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.05"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin"
            android:text="By Signing In you agree with our"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <LinearLayout
            android:id="@+id/lay3"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="0.07"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_termservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay2"
                android:text="Terms of Servics"
                android:textColor="#00CCD5"
              android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/login_and"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:text="and"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/txt_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay2"
                android:text="Privacy Policy"
                android:textColor="#00CCD5"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/progress_bar" />

</RelativeLayout>