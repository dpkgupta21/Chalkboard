<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="1dp"
    card_view:cardCornerRadius="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/back_circle" />

        <ImageView
            android:id="@+id/teacher_circle_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:padding="3dp"
            app:civ_border_color="@color/grey"
            app:civ_border_width="1dp" />


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/teacher_circle_img"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp">

            <com.chalkboard.customviews.MyTextViewMarlBold
                android:id="@+id/txt_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="Md. Alnasir"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <com.chalkboard.customviews.MyTextViewMark
                android:id="@+id/txt_seperator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_teacher_name"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="|"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.chalkboard.customviews.MyTextViewMark
                android:id="@+id/txt_teacher_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/txt_seperator"
                android:text="23"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.chalkboard.customviews.MyTextViewMark
                android:id="@+id/txt_teacher_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/txt_teacher_age"
                android:text="M"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.chalkboard.customviews.MyTextViewMark
                android:id="@+id/txt_teacher_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_teacher_gender"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="Jaipur"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>