<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_25dp"
            android:padding="@dimen/margin_20dp"
            app:civ_border_color="@color/grey"
            app:civ_border_width="1dp" />


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/txt_date_time"
            android:layout_toRightOf="@+id/circle_img"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <com.chalkboard.customviews.MyTextViewMarlBold
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Md. Alnasir"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/grey"
                android:textStyle="bold" />

            <com.chalkboard.customviews.MyTextViewMark
                android:id="@+id/txt_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title"
                android:layout_marginTop="@dimen/margin_10dp"
                android:gravity="left"
                android:text="Lorem"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/grey" />



        </RelativeLayout>

        <com.chalkboard.customviews.MyTextViewMark
            android:id="@+id/txt_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="05:00 PM"
            android:textColor="@color/grey" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@android:color/darker_gray" />
</android.support.v7.widget.CardView>