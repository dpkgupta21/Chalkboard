<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="6dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/back_circle" />

    <ImageView
        android:id="@+id/teacher_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="6dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:padding="3dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/teacher_favorite_image"
        android:layout_toRightOf="@+id/teacher_image"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="Teacher name in list android"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grey"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/teacher_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacher_name"
        android:layout_toLeftOf="@+id/teacher_favorite_image"
        android:layout_toRightOf="@+id/teacher_image"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="Medrid Spain"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grey" />

    <ImageView
        android:id="@+id/teacher_favorite_image"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:padding="7dp" />

</RelativeLayout>